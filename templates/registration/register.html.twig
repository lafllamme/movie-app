{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="text-center w-4/5 m-auto">
		<div class="py-12 border-b border-gray-200">
			<h1 class="text-6xl pt-12 pb-8">Register</h1>

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="uppercase bg-blue-500 text-gray-100 py-4 px-8 text-lg mt-10 w-1/5 font-extrabold rounded-3xl  hover:bg-blue-300 transition transition-all">Register</button>
			{{ form_end(registrationForm) }}</div>
	</div>
{% endblock %}
